  <select id="findUserByUserName" resultType="run.aquan.iron.system.model.User">
    SELECT
	u.id,
	u.username,
	u.`password`,
	u.nick_name,
	u.roles,
	u.sex,
	u.register_date
    FROM
        `user` u
    WHERE 1=1
    <if test="userName != null and userName != ''">
      and u.username = #{userName}
    </if>
  </select>


